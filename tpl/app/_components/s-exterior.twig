<section class=" js-navigator-item " id="exterior">
    <section class="s-exterior section-tabs section-holder js-snap-item" data-module="tabs">
        <div class="title-common">NGOẠI THẤT</div>
        <div class="tab-pane s-exterior__content">
                <div class="tab-pane__left">
                    <div class="tab-pane__item tab-pane__item--image active js-tab-stage js-tab-stage1">
                        <img class="hidden-1024 lozad" src="{{ assets_url }}/images/dummy/1203x675.png" data-src="{{ exterior.section_background }}" alt="">
                        <img class="visible-1024 lozad" src="{{ assets_url }}/images/dummy/640x420.png" data-src="{{ exterior.section_background_mobile }}" alt="">
                    </div>
                    {% if exterior_categories|length > 0 %}
                    {% for category in exterior_categories %}
                    <div class="tab-pane__item tab-pane__item--image js-tab-stage js-tab-stage{{ loop.index + 1 }}">
                        <img class="hidden-1024 lozad" src="{{ assets_url }}/images/dummy/1203x675.png" data-src="{{ category.image }}" alt="">
                        <img class="visible-1024 lozad" src="{{ assets_url }}/images/dummy/640x420.png" data-src="{{ category.image_mobile }}" alt="">
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="tab-pane__right">
                    <ul class="list-tabs js-tab-list">
                        <li class="list-tabs__item active" data-tab="1">TỔNG QUAN</li>
                        {% if exterior_categories|length > 0 %}
                        {% for category in exterior_categories %}
                            <li class="list-tabs__item" data-tab="{{ loop.index + 1 }}">{{ category.title }}</li>
                        {% endfor %}
                        {% endif %}
                    </ul>
                    <div class="tab-pane__content">
                        <div class="active tab-pane__item js-tab-stage js-tab-stage1">
                            <div class="tab-pane__content__title text-uppercase">{{ exterior.section_title|raw }}</div>
                            <div class="tab-pane__content__desc">{{ exterior.section_description|raw }}</div>
                        </div>
                        {% if exterior_categories|length > 0 %}
                        {% for category in exterior_categories %}
                            <div class="tab-pane__item js-tab-stage js-tab-stage{{ loop.index + 1 }}">
                                <div class="tab-pane__content__title text-uppercase">{{ category.heading|raw }}</div>
                                <div class="tab-pane__content__desc">{{ category.description|raw }}</div>
                                {% if category.items|length > 0 %}
                                <div class="btn-detail"  onclick="myApp['openPopup']('#popup-exterior-{{ loop.index + 1 }}')">
                                    <span class="btn-detail__text">CHI TIẾT {{ category.title }}</span>
                                    <img class="btn-detail__img" src="{{ assets_url }}/images/icon/arrow-right.png" alt="">
                                </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                        {% endif %}
                    </div>
                </div>
        </div>
    </section>
    {% include '_components/s-color.twig' %}
</section>

{% include '_components/s-exterior-popup.twig' %}
