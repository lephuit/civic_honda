{% if gallery_categories|length > 0 %}
{% for category in gallery_categories %}
{% if category.items|length > 0 %}

{% set cat_index = loop.index %}

<section class="popup popup--slider" data-module="popup" id="popup-gallery-{{ loop.index }}">
    <div class="popup__bg" onclick="myApp['closePopup']('#popup-gallery-{{ loop.index }}')"></div>
    <div class="popup__table">
        <div class="popup__table-cell">
            <div class="popup__container">
                <div class="popup__close  js-pause-all">
                    <img src="{{ assets_url }}/images/icon/close-button.png" alt="">
                </div>
                <div class="popup__content" data-module="popup-slider">
                    <div class="slider slider__rotate">
                        <div class="container">
                            <h3 class="text-uppercase popup--slider__title">{{ category.title }}</h3>
                            <div class="rotateslider-container">
                                <!-- Insert your images here -->
								{% for item in category.items %}
									{% if item.type == 'image' %}
	                                    <div class="rotateslider-item">
	                                        <div class="rotateslider__inner">
	                                            <div class="rotateslider-item__img">
	                                               <img class="lozad" src="{{ assets_url }}/images/dummy/890x502.png" data-src="{{ item.image }}" alt="">
	                                            </div>

	                                        </div>
	                                    </div>
									{% endif %}
									{% if item.type == 'video' %}
										<div class="rotateslider-item">
											<div class="rotateslider__inner">
												<div class="rotateslider-item__img">
													<div class="popup__video">
														<img src="{{ assets_url }}/images/dummy/890x502.png">
														<div class="js-youtube" id-video="{{ item.video }}" id="gallery-video-{{ cat_index }}-{{ loop.index }}"
															hide-stop = 'true'
															inline="true"
															start-from="0"
															>
														</div>
													</div>
												</div>
											</div>
										</div>
									{% endif %}
                                {% endfor %}

                                <!-- Next/prev arrows navigation -->
                                <div class="js-rotateslider-arrow o-arrow c-arrow-right" data-action="next">
                                    <span></span>
                                    <span></span>
                                </div>

                                <div class="js-rotateslider-arrow o-arrow c-arrow-left" data-action="prev">
                                    <span></span>
                                    <span></span>
                                </div>
                                <ul class="js-rotateslider-paginator rotateslider-paginator"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endif %}
{% endfor %}
{% endif %}
